<div class='container'>
	<p id="notice"><%= notice %></p>
	<div class='row'>
		<div class='col-sm-7'>
			<%= image_tag @product.image.url, class: ''%>
		</div>
		<div class='col-sm-5'></div>
	</div>
	<%= image_tag @product.image.url(:medium) %>
	<p>
	  <strong>Name:</strong>
	  <%= @product.name %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @product.description %>
	</p>

	<p>
	  <strong>Price:</strong>
	  <%= @product.price %>
	</p>

	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
</div>