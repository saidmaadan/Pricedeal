<div class='container'>
	<div class='row'>
		<div class='col-sm-7'>
			<%= image_tag @product.image.url, class: 'img-reponsive', style:'width:100%;height:500px;'%>
			<h2><%= @product.name %></h2>
			<p><%= @product.description %></p>
			<h4> <%= number_to_currency(@product.price) %></h4>
			<p>
			 <% if current_seller == @product.seller %>
				<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-info' %>
				 <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
			<% end %>
			</p>
		</div>
		<div class='col-sm-5'></div>
		
	</div>


	
</div>