<div class='container'>
	<p id="notice"><%= notice %></p>
	<div class='row'>
		<div class='col-sm-7'>
			<%= image_tag @product.image.url, class: 'img-reponsive', style:'width:100%;height:500px;'%>
			<h2><%= @product.name %></h2>
			<p><%= @product.description %></p>
