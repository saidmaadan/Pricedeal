<div class='container'>
  <h1>Listing products</h1>
  
  <div class='row'>
    <% @products.each do |product| %>
    <div class='col-md-3 col-sm-4 col-xs-12'>
    
      <div class='thumbnail'>
        <%= image_tag product.image.url, class: 'img-responsive', style: 'width:100%;height:200px;' %>
        <div class='caption'>
        <h4><%= link_to product.name, product %></h4>
        <%= number_to_currency(product.price) %><br>
        <%= "Listed By #{product.seller.first_name.capitalize} #{product.seller.last_name.capitalize[0]}." %><br>

       <% if (seller_signed_in?) && (current_seller == product.seller)%>
       <div class="btn-group">
		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		    Action <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu">
		    <li><%= link_to 'View', product, class: 'btn btn-link' %></li>  
		    <li><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-link' %></li>
		    <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></li>
		  </ul>
		</div>
        <% end %> 
      </div>
    </div>
    </div>
     <% end %>
  </div>


  <br>
<% if seller_signed_in?%>
  <%= link_to 'New Product', new_product_path %>
<% end %>
</div>