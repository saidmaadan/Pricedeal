<div class='container'>
  <h1>Listing orders</h1>

  <table>
    <thead>
      <tr>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Apt</th>
        <th>Zip code</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.street %></td>
          <td><%= order.city %></td>
          <td><%= order.state %></td>
          <td><%= order.apt %></td>
          <td><%= order.zip_code %></td>
          <td><%= order.country %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Order', new_order_path %>
</div>